{{#extend "layout"}}
    {{#content "main"}}
        <section class="checkout">
            <div class="container">
                <form class="checkout__row checkout__row--inversed" action="/" method="POST" data-need-validation>
                    <div class="checkout__left-col">
                        <div class="checkout__grid">
                            <div class="checkout__grid-item checkout__grid-item--fullwidth">
                                <div class="checkout__form">
                                    <div class="checkout__form-user-info">
                                        <h2 class="checkout__form-heading">
                                            1. Введите данные для доставки
                                        </h2>
                                        <div class="checkout__form-combined">


                                            <div class="checkout__form-user-info-row">
                                                <div class="checkout__form-user-info-col">
                                                    <div class="account-input-wrapper">

                                                        <input type="text" class="account-input" id="firstname" required
                                                            placeholder="Имя">
                                                        <label class="account-label" for="firstname">
                                                            Имя*
                                                        </label>
                                                    </div>
                                                </div>
                                                <div class="checkout__form-user-info-col">
                                                    <div class="account-input-wrapper">
                                                        <input type="tel" class="account-input js-phone-input"
                                                            id="phone" required data-parsley-phone
                                                            placeholder="Телефон*">
                                                        <label class="account-label" for="phone">
                                                            Телефон*
                                                        </label>
                                                    </div>
                                                </div>

                                                <div class="checkout__form-user-info-col">
                                                    <div class="account-input-wrapper">
                                                        <input type="text" class="account-input" id="lastname" required
                                                            placeholder="Фамилия*">
                                                        <label class="account-label" for="lastname">
                                                            Фамилия*
                                                        </label>
                                                    </div>
                                                </div>
                                                <div class="checkout__form-user-info-col">
                                                    <div class="account-input-wrapper">
                                                        <input type="email" class="account-input" id="email" required
                                                            placeholder="Email*">
                                                        <label class="account-label" for="email">
                                                            Email*
                                                        </label>
                                                    </div>
                                                </div>

                                            </div>
                                            <div class="checkout__form-delivery-row">

                                                <div class="checkout__form-delivery-col">
                                                    <div class="account-input-wrapper">
                                                        <input type="text" class="account-input" id="country" required
                                                            placeholder="Страна">
                                                        <label class="account-label" for="country">
                                                            Страна
                                                        </label>
                                                    </div>
                                                </div>
                                                <div class="checkout__form-delivery-col">
                                                    <div class="account-input-wrapper">
                                                        <input type="text" class="account-input" id="city" required
                                                            placeholder="Город">
                                                        <label class="account-label" for="city">
                                                            Город
                                                        </label>
                                                    </div>
                                                </div>
                                                <div class="checkout__form-delivery-col">
                                                    <div class="account-input-wrapper">
                                                        <input type="text" class="account-input" id="region" required
                                                            placeholder="Область">
                                                        <label class="account-label" for="region">
                                                            Область
                                                        </label>
                                                    </div>
                                                </div>
                                                <div class="checkout__form-delivery-col">
                                                    <div class="account-input-wrapper">
                                                        <input type="text" class="account-input" id="street" required
                                                            placeholder="Улица">
                                                        <label class="account-label" for="street">
                                                            Улица
                                                        </label>
                                                    </div>
                                                </div>
                                                <div class="checkout__form-delivery-col">
                                                    <div class="account-input-wrapper">
                                                        <input type="text" class="account-input" id="index" required
                                                            placeholder="Индекс">
                                                        <label class="account-label" for="index">
                                                            Индекс
                                                        </label>
                                                    </div>
                                                </div>
                                                <div class="checkout__form-delivery-col">
                                                    <div class="checkout__form-delivery-inner-row">
                                                        <div class="checkout__form-delivery-inner-col">
                                                            <div class="account-input-wrapper">
                                                                <input type="text" class="account-input" id="building"
                                                                    required placeholder="Дом">
                                                                <label class="account-label" for="building">
                                                                    Дом
                                                                </label>
                                                            </div>
                                                        </div>
                                                        <div class="checkout__form-delivery-inner-col">
                                                            <div class="account-input-wrapper">
                                                                <input type="text" class="account-input" id="flat"
                                                                    required placeholder="Квартира*">
                                                                <label class="account-label" for="flat">
                                                                    Квартира*
                                                                </label>
                                                            </div>
                                                        </div>
                                                        <div class="checkout__form-delivery-inner-col">
                                                            <div class="account-input-wrapper">
                                                                <input type="text" class="account-input" id="section"
                                                                    required placeholder="Корпус*">
                                                                <label class="account-label" for="section">
                                                                    Корпус*
                                                                </label>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="checkout__grid-item">
                                <h2 class="checkout__form-heading checkout__form-heading--with-border">
                                    2. Вариант доставки
                                </h2>
                                <div class="checkout__form-combined-options">
                                    <div class="checkout__form-combined-option">
                                        <label class="checkout__form-payment-checkbox">
                                            <input type="radio" name="delivery" value="Самовывоз"
                                                class="checkout__form-payment-checkbox-input">
                                            <span class="checkout__form-payment-checkbox-content">
                                                <span class="checkout__form-payment-checkbox-mark">

                                                </span>
                                                <span class="checkout__form-payment-checkbox-text">
                                                    Самовывоз
                                                </span>
                                                <span class="checkout__form-payment-checkbox-secondary-text">
                                                    <strong>
                                                        Бесплатно
                                                    </strong>
                                                </span>
                                            </span>
                                        </label>
                                    </div>
                                    <div class="checkout__form-combined-option">
                                        <label class="checkout__form-payment-checkbox">
                                            <input type="radio" name="delivery" value="Курьером по городу"
                                                class="checkout__form-payment-checkbox-input" checked="">
                                            <span class="checkout__form-payment-checkbox-content">
                                                <span class="checkout__form-payment-checkbox-mark">

                                                </span>
                                                <span class="checkout__form-payment-checkbox-text">
                                                    Курьером по городу
                                                </span>
                                                <span class="checkout__form-payment-checkbox-secondary-text">
                                                    <strong>
                                                        1 000 ₽
                                                    </strong>
                                                </span>
                                            </span>
                                        </label>
                                    </div>

                                </div>
                            </div>
                            <div class="checkout__grid-item">
                                <h2 class="checkout__form-heading checkout__form-heading--with-border">
                                    3. Оплата
                                </h2>
                                <div class="checkout__form-combined-options">
                                    <div class="checkout__form-combined-option">


                                        <label class="checkout__form-payment-checkbox">

                                            <input type="radio" name="payment" value="cash"
                                                class="checkout__form-payment-checkbox-input">
                                            <span class="checkout__form-payment-checkbox-content">
                                                <span class="checkout__form-payment-checkbox-mark">

                                                </span>
                                                <span class="checkout__form-payment-checkbox-text">
                                                    Наличными
                                                </span>

                                            </span>
                                        </label>
                                    </div>
                                    <div class="checkout__form-combined-option">


                                        <label class="checkout__form-payment-checkbox">

                                            <input type="radio" name="payment" value="card"
                                                class="checkout__form-payment-checkbox-input" checked>
                                            <span class="checkout__form-payment-checkbox-content">


                                                <span class="checkout__form-payment-checkbox-mark">

                                                </span>
                                                <span class="checkout__form-payment-checkbox-text">
                                                    Банковской картой
                                                </span>
                                                <img src="img/cards.jpg" alt=""
                                                    class="checkout__form-payment-checkbox-image">
                                            </span>
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="checkout__grid-item checkout__grid-item--with-margin">
                                <div class="checkout__rules">
                                    <ul class="account-list">
                                        <li class="account-list-item">
                                            <div class="account-list-card">
                                                Интернет магазин OUTPAC работает согласно российскому законодательству.
                                                В нашем
                                                интернет магазине, Вы можете обменять любое приобретенное изделие.
                                            </div>

                                        </li>
                                        <li class="account-list-item">
                                            <div class="account-list-card">
                                                Гарантия безпроблемного возврата в течении 30 дней
                                            </div>

                                        </li>
                                        <li class="account-list-item">
                                            <div class="account-list-card">
                                                Гарантия качества покупки. Гарантия 3 месяца
                                            </div>
                                        </li>
                                        <li class="account-list-item">
                                            <div class="account-list-card">
                                                Ваши права защищены
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="checkout__grid-item checkout__grid-item--with-margin">
                                <div class="checkout__combined-total">
                                    <span>
                                        Сумма к оплате:
                                    </span>
                                    <span>
                                        14 290 ₽
                                    </span>
                                </div>
                                <div class="checkout__combined-policy">
                                    <label class="account-checkbox">
                                        <input type="checkbox" class="account-checkbox-input"
                                            id="use-as-payment-address">
                                        <span class="account-checkbox-mark">

                                        </span>
                                        <span class="account-checkbox-text">
                                            Согласен с правилами и условями работы интернет-магазина
                                        </span>
                                    </label>
                                </div>
                                <button class="checkout__form-submit checkout__form-submit--blue" type="submit">
                                    оплатить
                                </button>
                            </div>
                        </div>


                    </div>
                    <div class="checkout__right-col">
                        <div class="checkout__cart-wrapper">
                            <h2 class="account-heading checkout__heading">
                                Корзина
                            </h2>
                            <div class="checkout__cart">
                                <ul class="checkout__cart-list">
                                    <li class="checkout__cart-list-item">
                                        <div class="checkout__cart-card">
                                            <div class="checkout__cart-card-image-container">

                                            </div>
                                            <div class="checkout__cart-card-content">
                                                <div class="checkout__cart-card-info">
                                                    <h4 class="checkout__cart-card-title">
                                                        Город и горы.<br>
                                                        Следы на снегу.
                                                    </h4>

                                                    <div class="checkout__cart-card-quantity">
                                                        <select name="quantity" class="js-custom-select">
                                                            <option value="1">1</option>
                                                            <option value="2">2</option>
                                                            <option value="3">3</option>
                                                            <option value="4">4</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="checkout__cart-card-price">
                                                    <div class="checkout__cart-card-price-old">
                                                        14 290 P
                                                    </div>
                                                    <div class="checkout__cart-card-price-new">
                                                        7 145 P
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                    </li>
                                    <li class="checkout__cart-list-item">
                                        <div class="checkout__cart-card">
                                            <div class="checkout__cart-card-image-container">

                                            </div>
                                            <div class="checkout__cart-card-content">
                                                <div class="checkout__cart-card-info">
                                                    <h4 class="checkout__cart-card-title">
                                                        Город и горы.<br>
                                                        Следы на снегу.
                                                    </h4>

                                                    <div class="checkout__cart-card-quantity">
                                                        <select name="quantity" class="js-custom-select">
                                                            <option value="1">1</option>
                                                            <option value="2">2</option>
                                                            <option value="3">3</option>
                                                            <option value="4">4</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="checkout__cart-card-price">
                                                    14 290 ₽
                                                </div>
                                            </div>

                                        </div>
                                    </li>

                                </ul>
                                <div class="checkout__cart-totals">

                                    <div
                                        class="checkout__cart-totals-item checkout__cart-totals-item--with-last-border">
                                        <div class="checkout__cart-totals-item-key">
                                            <strong>
                                                Итого к оплате:
                                            </strong>
                                        </div>
                                        <div class="checkout__cart-totals-item-value">
                                            <strong>
                                                14 290 P
                                            </strong>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>

                    </div>
                </form>

                </form>
        </section>

    {{/content}}
{{/extend}}